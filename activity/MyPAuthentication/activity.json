{
    "name": "MyPAuthentication",
    "title": "Generate MyPreferences authentication header",
    "version": "0.1.0",
    "type": "flogo:activity",
    "author": "jorge cabrera",
    "display": {
        "category": "MyPreferences",
        "visible": true,
        "smallIcon": "myp.ico",
        "description": "This activity generates the MyPreferences authentication using sha256"
    },
    "ref": "github.com/jecabreraa/flogo-components/activity/MyPAuthentication",
    "inputs": [
        {
            "name": "key",
            "type": "string",
            "required": true,
            "display":{
              "name": "Authentication key",
              "description": "Key to generate authentication hash",
            }
        },
        {
            "name": "mypclientid",
            "type": "string",
            "required": true,
            "display":{
              "name": "Client id",
              "description": "MyPreferences client id",
            }
        },
        {
            "name": "mypusername",
            "type": "string",
            "required": true,
            "display":{
              "name": "User name",
              "description": "MyPreferences user name",
            }
        },
		{
            "name": "timestamp",
            "type": "string",
            "required": false,
            "display":{
              "name": "time stamp (for testing)",
              "description": "Hard coded timestamp for testing purposes",
            }
        }

    ],
    "outputs": [
        {
            "name": "authentication header",
            "type": "string"
        }
    ]
}
